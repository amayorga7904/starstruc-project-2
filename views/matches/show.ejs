<%- include('../partials/header') %>

<h1>Conversation with <%= (match.messages && match.messages.length > 0 && match.messages[0].recipient && match.messages[0].recipient.name) || 'Unknown Recipient' %></h1>

<ul>
    <% match.messages.forEach(function(message) { %>
        <li><strong><%= message.content %></li>
    <% }); %>
</ul>


<form action="/matches/<%= match.sender %>/<%= match.recipient %>" method="POST">
    <textarea name="content"></textarea>
    <input type="hidden" name="sender" value="<%= user._id %>">
    <input type="hidden" name="recipient" value="<%= match.messages[0].recipient._id %>">
    <button type="submit">Send Message</button>
</form>



<%- include('../partials/footer') %>

